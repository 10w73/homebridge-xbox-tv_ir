{
	"pluginAlias": "XboxTv",
	"pluginType": "platform",
	"singular": true,
	"customUi": false,
	"headerDisplay": "This plugin works with Xbox game consoles and are exposed to HomeKit as separate accessories and each needs to be manually paired.\n\n1. Open the Home <img src='https://user-images.githubusercontent.com/3979615/78010622-4ea1d380-738e-11ea-8a17-e6a465eeec35.png' height='16.42px'> app on your device.\n2. Tap the Home tab, then tap <img src='https://user-images.githubusercontent.com/3979615/78010869-9aed1380-738e-11ea-9644-9f46b3633026.png' height='16.42px'>.\n3. Tap *Add Accessory*, and select *I Don't Have a Code or Cannot Scan*.\n4. Enter the Homebridge PIN, this can be found under the QR code in Homebridge UI or your Homebridge logs, alternatively you can select *Use Camera* and scan the QR code again.",
	"footerDisplay": "This plugin works with Xbox game console which is available [here](https://github.com/grzegorz914/homebridge-xbox-tv).",
	"schema": {
		"type": "object",
		"properties": {
			"devices": {
				"title": "Devices",
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"title": "Device name",
							"type": "string",
							"default": "Game console",
							"required": true
						},
						"host": {
							"title": "Address IP",
							"type": "string",
							"default": "192.168.1.6",
							"required": true,
							"format": "hostname"
						},
						"clientID": {
							"title": "Web Api ID",
							"type": "string",
							"placeholder": "5e5ead27-ed60-482d-b3fc-702b28a97404",
							"description": "Optional free-form for future use.",
							"required": false
						},
						"clientSecret": {
							"title": "Web Api Secret",
							"type": "string",
							"placeholder": "Web Api Secret",
							"description": "Optional free-form for future use.",
							"required": false
						},
						"xboxliveid": {
							"title": "Live ID",
							"type": "string",
							"placeholder": "FD00000000000000",
							"description": "Here put the Xbox Live ID",
							"required": true
						},
						"xboxWebApiToken": {
							"title": "Web Api Token",
							"type": "string",
							"placeholder": "",
							"description": "Here put the reponse Token (value after ?code=) from the authentication URL.",
							"required": true
						},
						"refreshInterval": {
							"title": "Refresh interval (sec)",
							"type": "integer",
							"default": 5,
							"minimum": 0,
							"maximum": 60,
							"required": true
						},
						"disableLogInfo": {
							"title": "Disable log info",
							"type": "boolean",
							"default": false,
							"required": false,
							"description": "This disable log info, all values and state will not be displayed in Homebridge log console."
						},
						"xboxWebApiEnabled": {
							"title": "Enable Web Api",
							"type": "boolean",
							"default": false,
							"required": false,
							"description": "This enable possibility to control Xbox over Web Api."
						},
						"volumeControl": {
							"title": "Volume control mode",
							"type": "integer",
							"minimum": 0,
							"maximum": 2,
							"description": "Here select what a volume control mode You want to use. If select \"None\" only hardware buttons in RC app can be used to control volume.",
							"oneOf": [
								{
									"title": "None",
									"enum": [
										0
									]
								},
								{
									"title": "Slider",
									"enum": [
										1
									]
								},
								{
									"title": "Fan",
									"enum": [
										2
									]
								}
							],
							"required": false
						},
						"switchInfoMenu": {
							"title": "Switch Info/Menu",
							"type": "boolean",
							"default": false,
							"required": false,
							"description": "This toggle behaviour for *I* button in RC app and *PowerModeSelection* in settings."
						},
						"getIputsFromDevice": {
							"title": "Get inputs from device",
							"type": "boolean",
							"default": false,
							"required": false,
							"description": "This function get all available inputs direct from device, manually configured inputs will be skipped."
						  },
						"inputs": {
							"title": "Inputs",
							"buttonText": "Add app/input",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"title": "Name",
										"type": "string",
										"description": "Here set Your own name.",
										"required": true
									},
									"reference": {
										"title": "Reference",
										"type": "string",
										"description": "Here set reference.",
										"required": true
									},
									"type": {
										"title": "Input type",
										"type": "string",
										"description": "Here select source input type.",
										"oneOf": [
											{
												"title": "Other",
												"enum": [
													"OTHER"
												]
											},
											{
												"title": "Home screen",
												"enum": [
													"HOME_SCREEN"
												]
											},
											{
												"title": "Tuner",
												"enum": [
													"TUNER"
												]
											},
											{
												"title": "HDMI",
												"enum": [
													"HDMI"
												]
											},
											{
												"title": "Composite video",
												"enum": [
													"COMPOSITE_VIDEO"
												]
											},
											{
												"title": "S Video",
												"enum": [
													"S_VIDEO"
												]
											},
											{
												"title": "Component video",
												"enum": [
													"COMPONENT_VIDEO"
												]
											},
											{
												"title": "Digital video input",
												"enum": [
													"DVI"
												]
											},
											{
												"title": "Airplay",
												"enum": [
													"AIRPLAY"
												]
											},
											{
												"title": "USB",
												"enum": [
													"USB"
												]
											},
											{
												"title": "Application",
												"enum": [
													"APPLICATION"
												]
											}
										],
										"required": false
									}
								}
							}
						},
						"buttons": {
							"title": "Buttons",
							"buttonText": "Add button",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"title": "Name",
										"type": "string",
										"description": "Here set Your own name.",
										"required": false
									},
									"reference": {
										"title": "Reference",
										"type": "string",
										"description": "Here set the reference.",
										"required": true
									}
								}
							}
						},
						"manufacturer": {
							"name": "Manufacturer",
							"type": "string",
							"placeholder": "Manufacturer",
							"description": "Set the manufacturer name.",
							"required": false
						},
						"modelName": {
							"name": "Model",
							"type": "string",
							"placeholder": "Xbox One",
							"description": "Set the model name.",
							"required": false
						},
						"serialNumber": {
							"name": "Serial Number",
							"type": "string",
							"placeholder": "000000000000",
							"description": "Set the serial number.",
							"required": false
						},
						"firmwareRevision": {
							"name": "Firmware Revision",
							"type": "string",
							"placeholder": "00.0.00000.0000",
							"description": "Set the firmware revision.",
							"required": false
						}
					}
				}
			}
		}
	},
	"layout": [
		{
			"key": "devices",
			"type": "tabarray",
			"title": "{{ value.name || 'new device' }}",
			"items": [
				"devices[].name",
				"devices[].host",
				"devices[].xboxWebApiEnabled",
				{
					"key": "devices[]",
					"type": "section",
					"title": "Inputs",
					"expandable": true,
					"expanded": false,
					"items": [
						{
							"key": "devices[].inputs",
							"type": "array",
							"orderable": false,
							"buttonText": "Add input",
							"items": [
								"devices[].inputs[].name",
								"devices[].inputs[].reference",
								"devices[].inputs[].type"
							]
						}
					],
					"condition": {
						"functionBody": "return model.devices[arrayIndices].getIputsFromDevice == false;"
					}
				},
				{
					"key": "devices[]",
					"type": "section",
					"title": "Buttons",
					"expandable": true,
					"expanded": false,
					"items": [
						{
							"key": "devices[].buttons",
							"type": "array",
							"orderable": false,
							"buttonText": "Add button",
							"items": [
								"devices[].buttons[].name",
								"devices[].buttons[].reference"
							]
						}
					],
					"condition": {
						"functionBody": "return model.devices[arrayIndices].xboxWebApiEnabled === true;"
					}
				},
				{
					"key": "devices[]",
					"type": "section",
					"title": "Xbox Live and Web Api",
					"expandable": true,
					"expanded": false,
					"items": [
						"devices[].xboxliveid",
						"devices[].clientID",
						"devices[].clientSecret",
						"devices[].xboxWebApiToken"
					],
					"condition": {
						"functionBody": "return model.devices[arrayIndices].xboxWebApiEnabled === true;"
					}
				},
				{
					"key": "devices[]",
					"type": "section",
					"title": "Advanced Settings",
					"expandable": true,
					"expanded": false,
					"items": [
						"devices[].getIputsFromDevice",
						"devices[].disableLogInfo",
						"devices[].switchInfoMenu",
						"devices[].refreshInterval",
						"devices[].volumeControl"
					]
				},
				{
					"key": "devices[]",
					"type": "section",
					"title": "Branding",
					"expandable": true,
					"expanded": false,
					"items": [
						"devices[].manufacturer",
						"devices[].modelName",
						"devices[].serialNumber",
						"devices[].firmwareRevision"
					]
				}
			]
		}
	]
}